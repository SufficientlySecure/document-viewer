        <antcall target="-make-release">
            <param name="mk" value="${cortex.a9.mk}" />
            <param name="apk" value="${target.apk}" />
            <param name="ndk.dir" value="${arm.ndk.dir}" />
            <param name="unrar.arch" value="arm7.a9" />
        </antcall>
    </target>

