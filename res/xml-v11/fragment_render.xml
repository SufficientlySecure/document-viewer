<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ebookdroid="http://ebookdroid.org" 
    android:summary="@string/pref_render_category_summary"
    android:title="@string/pref_render_category" >

    <CheckBoxPreference
            android:defaultValue="@string/pref_splitpages_defvalue"
            android:key="@string/pref_splitpages_id"
            android:summary="@string/pref_splitpages_summary"
            android:title="@string/pref_splitpages_title" />

    <CheckBoxPreference
            android:defaultValue="@string/pref_croppages_defvalue"
            android:key="@string/pref_croppages_id"
            android:summary="@string/pref_croppages_summary"
            android:title="@string/pref_croppages_title" />

    <ListPreference
            android:defaultValue="@string/pref_viewmode_vertical_scroll"
            android:entries="@array/pref_viewmode_entries"
            android:entryValues="@array/pref_viewmode_values"
            android:key="@string/pref_viewmode_id"
            android:summary="@string/pref_viewmode_summary"
            android:title="@string/pref_viewmode_title" />

    <PreferenceCategory
        android:summary="@string/pref_singlepage_category_summary"
        android:title="@string/pref_singlepage_category" >

        <ListPreference
                android:defaultValue="@string/pref_align_auto"
                android:entries="@array/pref_align_entries"
                android:entryValues="@array/pref_align_values"
                android:key="@string/pref_align_id"
                android:summary="@string/pref_align_summary"
                android:title="@string/pref_align_title" />

        <ListPreference
                android:defaultValue="@string/pref_animation_type_none"
                android:entries="@array/pref_animation_type_entries"
                android:entryValues="@array/pref_animation_type_values"
                android:key="@string/pref_animation_type_id"
                android:summary="@string/pref_animationtype_summary"
                android:title="@string/pref_animationtype_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:summary="@string/pref_postprocessing_summary"
        android:title="@string/pref_postprocessing_category" >

        <CheckBoxPreference
            android:defaultValue="@string/pref_nightmode_defvalue"
            android:key="@string/pref_nightmode_id"
            android:summary="@string/pref_nightmode_summary"
            android:title="@string/pref_nightmode_title" />

        <org.emdev.ui.preference.SeekBarPreference
            android:defaultValue="@string/pref_contrast_defvalue"
            android:key="@string/pref_contrast_id"
            ebookdroid:minValue="@string/pref_contrast_minvalue"
            ebookdroid:maxValue="@string/pref_contrast_maxvalue"
            android:summary="@string/pref_contrast_summary"
            android:title="@string/pref_contrast_title" />

        <org.emdev.ui.preference.SeekBarPreference
            android:defaultValue="@string/pref_exposure_defvalue"
            android:key="@string/pref_exposure_id"
            ebookdroid:minValue="@string/pref_exposure_minvalue"
            ebookdroid:maxValue="@string/pref_exposure_maxvalue"
            android:summary="@string/pref_exposure_summary"
            android:title="@string/pref_exposure_title" />

        <CheckBoxPreference
            android:defaultValue="@string/pref_autolevels_defvalue"
            android:key="@string/pref_autolevels_id"
            android:summary="@string/pref_autolevels_summary"
            android:title="@string/pref_autolevels_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="brfiletypespecific"
        android:summary="@string/pref_brfiletypespecific_summary"
        android:title="@string/pref_brfiletypespecific_title" >

        <PreferenceScreen
            android:summary="@string/pref_brfiletypespecific_summary"
            android:title="@string/pref_brfiletypespecific_title" >

            <PreferenceCategory
                android:key="brfiletypespecificdjvu"
                android:summary="@string/pref_brfiletypespecificdjvu_summary"
                android:title="@string/pref_brfiletypespecificdjvu_title" >

                <ListPreference
                        android:defaultValue="@string/pref_djvu_rendering_mode_0"
                        android:entries="@array/pref_djvu_rendering_mode_entries"
                        android:entryValues="@array/pref_djvu_rendering_mode_values"
                        android:key="@string/pref_djvu_rendering_mode_id"
                        android:summary="@string/pref_djvu_rendering_mode_summary"
                        android:title="@string/pref_djvu_rendering_mode_title" />

            </PreferenceCategory>

            <PreferenceCategory
                android:key="brfiletypespecificpdf"
                android:summary="@string/pref_brfiletypespecificpdf_summary"
                android:title="@string/pref_brfiletypespecificpdf_title" >

                <CheckBoxPreference
                        android:defaultValue="@string/pref_customdpi_defvalue"
                        android:key="@string/pref_customdpi_id"
                        android:summary="@string/pref_customdpi_summary"
                        android:title="@string/pref_customdpi_title" />

                <org.emdev.ui.preference.SeekBarPreference
                        android:defaultValue="@string/pref_xdpi_defvalue"
                        android:dependency="@string/pref_customdpi_id"
                        android:key="@string/pref_xdpi_id"
                        ebookdroid:minValue="@string/pref_xdpi_minvalue"
                        ebookdroid:maxValue="@string/pref_xdpi_maxvalue"
                        android:summary="@string/pref_xdpi_summary"
                        android:title="@string/pref_xdpi_title" />

                <org.emdev.ui.preference.SeekBarPreference
                        android:defaultValue="@string/pref_ydpi_defvalue"
                        android:dependency="@string/pref_customdpi_id"
                        android:key="@string/pref_ydpi_id"
                        ebookdroid:minValue="@string/pref_ydpi_minvalue"
                        ebookdroid:maxValue="@string/pref_ydpi_maxvalue"
                        android:summary="@string/pref_ydpi_summary"
                        android:title="@string/pref_ydpi_title" />

            </PreferenceCategory>

            <PreferenceCategory
                android:key="brfiletypespecificfb2"
                android:summary="@string/pref_brfiletypespecificfb2_summary"
                android:title="@string/pref_brfiletypespecificfb2_title" >

                <ListPreference
                        android:defaultValue="@string/pref_fontsize_normal"
                        android:entries="@array/pref_fontsize_entries"
                        android:entryValues="@array/pref_fontsize_values"
                        android:key="@string/pref_fontsize_id"
                        android:summary="@string/pref_fontsize_summary"
                        android:title="@string/pref_fontsize_title" />
                
                <CheckBoxPreference
                        android:defaultValue="@string/pref_fb2hyphen_defvalue"
                        android:key="@string/pref_fb2hyphen_id"
                        android:summary="@string/pref_fb2hyphen_summary"
                        android:title="@string/pref_fb2hyphen_title" />

            </PreferenceCategory>

        </PreferenceScreen>

    </PreferenceCategory>

</PreferenceScreen>