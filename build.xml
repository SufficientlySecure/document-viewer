        <antcall target="-make-release" inheritall="true">
            <param name="mk" value="${cortex.a8.mk}" />
            <param name="apk" value="apk/${package.name}-arm7-cortex-a8-${manifest.version}-r${svn.info.rev}.apk" />
            <param name="ndk.dir" value="${arm.ndk.dir}" />
