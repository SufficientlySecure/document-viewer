        <svn javahl="false">
            <info target="." />
        </svn>
        <echo>Revision: ${svn.info.rev}</echo>

        <property name="target.apk" location="apk/${package.name}-acer.iconia-${manifest.version}-r${svn.info.rev}.apk" />
