<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainscreen"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_gravity="center">

	<LinearLayout style="@style/action_bar">
		<ImageView style="@style/action_bar_icon" 
			android:src="@drawable/icon"/>
		<View style="@style/action_bar_separator" />
		<TextView style="@style/action_bar_title" />
		
		<ProgressBar style="@style/action_bar_progress"
		    android:id="@+id/recentprogress"
		    android:visibility="gone" />


		<ImageView
			style="@style/action_bar_action"
			android:id="@+id/recentlibrary"
			android:src="@drawable/actionbar_library" />
		<View style="@style/action_bar_separator" />
		<ImageView
			style="@style/action_bar_action"
			android:id="@+id/recentbrowser"
			android:src="@drawable/actionbar_open" />

	</LinearLayout>

	<ViewFlipper
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="@dimen/actionbar_height"
		android:gravity="center"
		android:orientation="vertical"
		android:id="@+id/recentflip" />

</RelativeLayout>